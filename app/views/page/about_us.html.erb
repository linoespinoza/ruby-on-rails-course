<% content_for 'title' do %>
  About us
<% end %>

<h1>Ask a Question</h1>

<%= form_tag do %>
  <%= field_set_tag 'Information' do %>
    <p>
      <%= label_tag 'Name: ' %>
      <%= text_field_tag 'name', @name, class: 'input', placeholder: 'Enter a name', size: 64 %>
    </p>

    <p>
      <%= label_tag 'Email Address: ' %>
      <%= email_field_tag 'email', @email, placeholder: 'Enter an email', size: 64 %>
    </p>

    <p>
      <%= label_tag 'Age: ' %>
      <%= number_field_tag 'age', @age, placeholder: 'Enter your age', min: 10, max: 20 %>
    </p>
 
    <p>
      <%= label_tag 'Comments: ' %>
      <%= text_area_tag 'Comments: '%>
    </p>

    <p><%= submit_tag 'Submit your question' %></p>
  <% end %>
<% end %>

<%= show_params %>